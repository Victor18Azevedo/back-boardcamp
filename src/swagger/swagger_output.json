{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "BOARDCAMP REST API",
    "description": "API to serve a board game rental store application"
  },
  "host": "https://boadcamp-api-victor18azevedo.onrender.com",
  "basePath": "/",
  "schemes": ["http", "https"],
  "paths": {
    "/categories": {
      "get": {
        "tags": ["Categories"],
        "description": "Route for list categories.",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string"
          },
          {
            "name": "desc",
            "in": "query",
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "Categories list successfully obtained.",
            "schema": {
              "$ref": "#/definitions/CategoriesList"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Categories"],
        "description": "Route for insert new category.",
        "parameters": [
          {
            "name": "Add Category",
            "in": "body",
            "required": true,
            "description": "Add a new category",
            "schema": {
              "$ref": "#/components/@schemas/AddCategory"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "New category add with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/customers": {
      "get": {
        "tags": ["Customers"],
        "description": "Route for list customers.",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string"
          },
          {
            "name": "desc",
            "in": "query",
            "type": "boolean"
          },
          {
            "name": "cpf",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Customers list successfully obtained.",
            "schema": {
              "$ref": "#/definitions/CustomersList"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/customers/{id}": {
      "get": {
        "tags": ["Customers"],
        "description": "Route for show a customer.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Customer successfully obtained."
          },
          "404": {
            "description": "Customer don`t found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "put": {
        "tags": ["Customers"],
        "description": "Route for update customer data.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Update Customer",
            "in": "body",
            "required": true,
            "description": "Update customers data by id",
            "schema": {
              "$ref": "#/components/@schemas/AddCustomer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Customer updated with success"
          },
          "400": {
            "description": "Update error"
          },
          "409": {
            "description": "CPF already used by another customer"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/customers/": {
      "post": {
        "tags": ["Customers"],
        "description": "Route for insert a new customer",
        "parameters": [
          {
            "name": "Add Customer",
            "in": "body",
            "required": true,
            "description": "Add a new customer",
            "schema": {
              "$ref": "#/components/@schemas/AddCustomer"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "New customer add with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "CPF already used by another customer"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/games": {
      "get": {
        "tags": ["Games"],
        "description": "Route for list games.",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string"
          },
          {
            "name": "desc",
            "in": "query",
            "type": "boolean"
          },
          {
            "name": "name",
            "in": "query",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Games list successfully obtained.",
            "schema": {
              "$ref": "#/definitions/GamesList"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Games"],
        "description": "Route for insert a new game",
        "parameters": [
          {
            "name": "Add Game",
            "in": "body",
            "required": true,
            "description": "Add a new game",
            "schema": {
              "$ref": "#/components/@schemas/AddGame"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "New game add with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Game already exist"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/rentals": {
      "get": {
        "tags": ["Rentals"],
        "description": "Route for list rentals.",
        "parameters": [
          {
            "name": "offset",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "limit",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "order",
            "in": "query",
            "type": "string"
          },
          {
            "name": "desc",
            "in": "query",
            "type": "boolean"
          },
          {
            "name": "status",
            "in": "query",
            "type": "string"
          },
          {
            "name": "startDate",
            "in": "query",
            "type": "date"
          },
          {
            "name": "endDate",
            "in": "query",
            "type": "date"
          },
          {
            "name": "customerId",
            "in": "query",
            "type": "integer"
          },
          {
            "name": "gameId",
            "in": "query",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Rentals list successfully obtained.",
            "schema": {
              "$ref": "#/definitions/RentalsList"
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": ["Rentals"],
        "description": "Route for create a new rental.",
        "parameters": [
          {
            "name": "New Rental",
            "in": "body",
            "required": true,
            "description": "Open a new rental",
            "schema": {
              "$ref": "#/components/@schemas/AddRental"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "New rental add with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/rentals/{id}/return": {
      "post": {
        "tags": ["Rentals"],
        "description": "Route for close a opened rental.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Rental closed with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/rentals/{id}": {
      "delete": {
        "tags": ["Rentals"],
        "description": "Route for delete a closed rental.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Rental deleted with success"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 3
        },
        "name": {
          "type": "string",
          "example": "Terror"
        }
      }
    },
    "CategoriesList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Category"
      }
    },
    "Customer": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "Messi"
        },
        "phone": {
          "type": "string",
          "example": "85988774466"
        },
        "cpf": {
          "type": "string",
          "example": "01234567890"
        },
        "birthday": {
          "type": "string",
          "example": "1987-06-24"
        }
      }
    },
    "CustomersList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Customer"
      }
    },
    "Game": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "name": {
          "type": "string",
          "example": "Banco Imobiliário"
        },
        "image": {
          "type": "string",
          "example": "https://d3ddx6b2p2pevg.cloudfront.net/Custom/Content/Products/10/08/1008677_jogo-banco-imobiliario-com-aplicativo-estrela_m12_636810396920334046"
        },
        "stockTotal": {
          "type": "number",
          "example": 3
        },
        "categoryId": {
          "type": "number",
          "example": 1
        },
        "pricePerDay": {
          "type": "number",
          "example": 1500
        },
        "categoryName": {
          "type": "string",
          "example": "Estratégia"
        }
      }
    },
    "GamesList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Game"
      }
    },
    "Rental": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 30
        },
        "customerId": {
          "type": "number",
          "example": 5
        },
        "gameId": {
          "type": "number",
          "example": 10
        },
        "rentDate": {
          "type": "string",
          "example": "2022-03-05"
        },
        "daysRented": {
          "type": "number",
          "example": 20
        },
        "returnDate": {},
        "originalPrice": {
          "type": "number",
          "example": 33000
        },
        "delayFee": {},
        "customer": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "example": 5
            },
            "name": {
              "type": "string",
              "example": "Messi"
            }
          }
        },
        "game": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "example": 10
            },
            "name": {
              "type": "string",
              "example": "Detetive"
            },
            "categoryId": {
              "type": "number",
              "example": 2
            },
            "categoryName": {
              "type": "string",
              "example": "Investigação"
            }
          }
        }
      }
    },
    "RentalsList": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Rental"
      }
    },
    "AddCategory": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Terror"
        }
      },
      "required": ["name"]
    },
    "AddCustomer": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Messi"
        },
        "phone": {
          "type": "string",
          "example": "85988774466"
        },
        "cpf": {
          "type": "string",
          "example": "01234567890"
        },
        "birthday": {
          "type": "string",
          "example": "1987-06-24"
        }
      },
      "required": ["name", "phone", "cpf", "birthday"]
    },
    "AddGame": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Jumanji"
        },
        "image": {
          "type": "string",
          "example": "http://blogdebrinquedo.com.br/wp-content/uploads/2019/11/20191129prop-jumanji-board-game-1-1-collector-replica-01.jpg"
        },
        "stockTotal": {
          "type": "number",
          "example": 1
        },
        "categoryId": {
          "type": "number",
          "example": 4
        },
        "pricePerDay": {
          "type": "number",
          "example": 1450
        }
      },
      "required": ["name", "image", "stockTotal", "categoryId", "pricePerDay"]
    },
    "AddRental": {
      "type": "object",
      "properties": {
        "customerId": {
          "type": "number",
          "example": 1
        },
        "gameId": {
          "type": "number",
          "example": 10
        },
        "daysRented": {
          "type": "number",
          "example": 3
        }
      },
      "required": ["customerId", "gameId", "daysRented"]
    }
  },
  "components": {
    "@schemas": {
      "AddCategory": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string",
            "description": "category name",
            "minLength": 3,
            "example": "Terror"
          }
        }
      },
      "AddCustomer": {
        "type": "object",
        "required": ["name", "phone", "cpf", "birthday"],
        "properties": {
          "name": {
            "type": "string",
            "description": "customer name",
            "example": "Messi"
          },
          "phone": {
            "type": "string",
            "description": "customer phone number",
            "minLength": 10,
            "maxLength": 11,
            "example": "85988774466"
          },
          "cpf": {
            "type": "string",
            "description": "customer document CPF number",
            "length": 11,
            "example": "01234567890"
          },
          "birthday": {
            "type": "date",
            "description": "customer birthday",
            "format": "YYYY-MM-DD",
            "example": "1987-06-24"
          }
        }
      },
      "AddGame": {
        "type": "object",
        "required": [
          "name",
          "image",
          "stockTotal",
          "categoryId",
          "pricePerDay"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "game name",
            "example": "Jumanji"
          },
          "image": {
            "type": "URL",
            "description": "image game URL",
            "example": "http://blogdebrinquedo.com.br/wp-content/uploads/2019/11/20191129prop-jumanji-board-game-1-1-collector-replica-01.jpg"
          },
          "stockTotal": {
            "type": "integer",
            "description": "game stock",
            "example": 1
          },
          "categoryId": {
            "type": "integer",
            "description": "category of game",
            "example": 4
          },
          "pricePerDay": {
            "type": "integer",
            "description": "rent price per day in cents",
            "example": 1450
          }
        }
      },
      "AddRental": {
        "type": "object",
        "required": ["customerId", "gameId", "daysRented"],
        "properties": {
          "customerId": {
            "type": "integer",
            "description": "customer id",
            "example": 1
          },
          "gameId": {
            "type": "integer",
            "description": "gamed id",
            "example": 10
          },
          "daysRented": {
            "type": "integer",
            "description": "rental days",
            "example": 3
          }
        }
      }
    }
  }
}
